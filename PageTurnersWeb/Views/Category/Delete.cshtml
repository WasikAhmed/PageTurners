@model Category

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div> Also can be used ModelOnly*@
        <div class="mb-2">
            <label asp-for="Name" class="mb-1"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="mb-2">
            <label asp-for="DisplayOrder" class="mb-1"></label>
            <input asp-for="DisplayOrder" disabled class="form-control">
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
